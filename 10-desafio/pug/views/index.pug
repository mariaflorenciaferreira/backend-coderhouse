html
    head
        title='Nuevos productos'
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <link rel="stylesheet" href="/style.css">
    body 
        div(class="container")
            h1(class="title")='Productos disponibles'   
        div(class="container") 
            if productosDisponibles
                div(class="container") 
                    each prod in productos
                        div(class="card") 
                            div(class="img-container") 
                                img(src=prod.imagen
                                class=card-img-top)
                            h3(class="card-title")=prod.titulo
                            p(class="card-text")='$'+prod.precio
            else 
                h2(class="title")="No hay productos"
        div(class="container") 
            a(href="http://localhost:4000/api/productos/forms") 
                button(class="button")='Cargar nuevo producto'
        include partials/footer.pug

