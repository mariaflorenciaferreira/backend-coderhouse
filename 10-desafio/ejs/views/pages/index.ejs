<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos con ejs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    
    <div class="container">
        <h1>Plantillas con ejs</h1>
    </div>
  
    <div class="container">
        <h2> Productos disponibles</h2>
    </div>

    <div class="container">

        <% if(productos.length>0) { %>
            <div class="container"> 
                <% productos.forEach( prod=> { %>
                    <div class="card">

                        <div class="img-container">
                            <img src="<%=prod.imagen%>" alt="" srcset="">
                        </div>
                        <h5 class="card-title">Nombre: <%=prod.titulo %></h5>
                        <p class="card-text">Precio: $ <%= prod.precio %></p>
                    </div>
                <% })%>
                </div>
        <% } else{ %>
                <h2 (class="title")>No hay productos</h2>
        <% } %>
        
        
    </div>

    <div class="container">
        <a href="/api/productos/forms"> <button>cargar nuevos productos</button> </a>
     </div>
    
    
    <%-include ('../partials/footer.ejs') %>
    

</body>
</html>